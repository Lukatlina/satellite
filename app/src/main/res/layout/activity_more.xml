<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.MoreActivity">

    <android.widget.Button
        android:id="@+id/btn_more_home"
        style="@style/navigation_btn"
        android:layout_width="137dp"
        android:layout_height="100dp"
        android:layout_marginTop="810dp"
        android:paddingTop="3dp"
        android:drawableTop="@drawable/baseline_person_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fl_more_chats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_more_chats"
        android:layout_width="137dp"
        android:layout_height="100dp"
        android:layout_marginTop="810dp"
        android:background="#298ecc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_more_home"
        app:layout_constraintStart_toEndOf="@+id/btn_more_more"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 기존 버튼 -->
        <android.widget.Button
            android:id="@+id/btn_more_chats"
            style="@style/chat_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/baseline_chat_50" />

        <!-- 알림 배지 -->
        <TextView
            android:id="@+id/more_notification_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/circle_red"
            android:padding="5dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <android.widget.Button
        android:id="@+id/btn_more_more"
        style="@style/navigation_btn"
        android:layout_width="137dp"
        android:layout_height="100dp"
        android:layout_marginTop="810dp"
        android:drawableTop="@drawable/baseline_settings_60"
        android:paddingTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fl_more_chats"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_more_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="282dp"
        android:text="MORE"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_more_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_more_profile_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_more_title"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/baseline_person_150" />

    <TextView
        android:id="@+id/tv_more_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="335dp"
        android:layout_marginBottom="12dp"
        android:text="프로필 편집"
        android:textColor="#999999"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_more_edit_profile"
        app:layout_constraintEnd_toStartOf="@+id/btn_more_edit_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_more_title" />

    <android.widget.Button
        android:id="@+id/btn_more_edit_profile"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:background="#00ff0000"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:drawablePadding="100dp"
        android:text="Button"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/view_line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_more_profile_title" />

    <TextView
        android:id="@+id/tv_more_etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="318dp"
        android:text="기타 관리"
        android:textColor="#999999"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_more_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line_1" />

    <android.widget.Button
        android:id="@+id/btn_more_logout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:background="#00ff0000"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="로그아웃"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_more_withdrawal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_more_etc" />

    <android.widget.Button
        android:id="@+id/btn_more_withdrawal"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:background="#00ff0000"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="회원탈퇴"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view_line_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_more_logout" />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="7dp"
        android:background="#999999"
        app:layout_constraintBottom_toTopOf="@+id/tv_more_etc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_more_edit_profile" />

    <View
        android:id="@+id/view_line_2"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="139dp"
        android:background="#999999"
        app:layout_constraintBottom_toTopOf="@+id/btn_more_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_more_withdrawal" />

    <View
        android:id="@+id/view_line_3"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="#999999"
        app:layout_constraintBottom_toTopOf="@+id/btn_more_withdrawal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_more_logout" />

    <TextView
        android:id="@+id/tv_more_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="175dp"
        android:text="nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_more_profile"
        android:textStyle="bold"
        android:textSize="18sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>