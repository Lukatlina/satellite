<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfileActivity">

    <android.widget.Button
        android:id="@+id/btn_edit_profile_return"
        style="@style/CustomReturnButtonStyle"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:text="&lt; 프로필 편집"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_edit_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="335dp"
        android:text="닉네임"
        android:textColor="#999999"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit_nickname"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_nickname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile_return" />

    <android.widget.Button
        android:id="@+id/btn_edit_nickname"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="#00ff0000"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:text="Button"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/view_line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_nickname" />

    <TextView
        android:id="@+id/tv_edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="318dp"
        android:text="상태 메시지"
        android:textColor="#999999"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line_1" />

    <android.widget.Button
        android:id="@+id/btn_edit_message"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:background="#00ff0000"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:text="Button"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/view_line_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_message" />

    <TextView
        android:id="@+id/tv_edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="285dp"
        android:text="비밀번호 재설정"
        android:textColor="#999999"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line_2" />

    <android.widget.Button
        android:id="@+id/btn_edit_password"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:background="#00ff0000"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:text="비밀번호를 잊으셨나요?"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/view_line_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_password" />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="7dp"
        android:background="#999999"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_nickname" />

    <View
        android:id="@+id/view_line_2"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="7dp"
        android:background="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_message" />

    <View
        android:id="@+id/view_line_3"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="139dp"
        android:background="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_password" />


    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile_return">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/baseline_person_150" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/little_circle"
            android:padding="10dp"
            android:layout_gravity="bottom|right"
            app:srcCompat="@drawable/baseline_add_a_photo_24" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>