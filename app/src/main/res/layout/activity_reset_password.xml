<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reset_pw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResetPasswordActivity">

    <android.widget.Button
        android:id="@+id/btn_reset_pw_return"
        style="@style/CustomReturnButtonStyle"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:text="&lt; 비밀번호 재설정"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_reset_pw_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="비밀번호 재설정을 위해 e-mail 인증이 필요합니다."
        android:textColor="#555555"
        app:layout_constraintBottom_toTopOf="@+id/et_reset_pw_email_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_reset_pw_email_layout"
        style="@style/CustomTextInputLayout"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_marginTop="100dp"
        app:boxStrokeColor="@color/colorPrimary"
        app:errorEnabled="true"
        android:hint="이메일 입력"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:helperTextTextAppearance="@style/HelperTextStyle">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reset_pw_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_reset_pw_auth_code_layout"
        style="@style/CustomTextInputLayout"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/et_reset_pw_email_layout"
        android:layout_marginTop="10dp"
        android:hint="인증번호 입력"
        app:boxStrokeColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_pw_email_layout"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:helperTextTextAppearance="@style/HelperTextStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reset_pw_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_reset_pw_layout"
        style="@style/CustomTextInputLayout"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:layout_below="@id/et_reset_pw_email_layout"
        android:hint="비밀번호 입력"
        app:boxStrokeColor="@color/colorPrimary"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_pw_auth_code_layout"
        app:layout_constraintVertical_bias="0.075"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:helperTextTextAppearance="@style/HelperTextStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reset_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_reset_pw_check_layout"
        style="@style/CustomTextInputLayout"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_below="@id/et_reset_pw_email_layout"
        android:hint="비밀번호 확인"
        app:boxStrokeColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_pw_layout"
        app:layout_constraintVertical_bias="0.075"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:helperTextTextAppearance="@style/HelperTextStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reset_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <android.widget.Button
        android:id="@+id/btn_reset_pw_submit"
        android:backgroundTint="#999999"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="31dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_pw_check_layout"
        app:layout_constraintVertical_bias="1.0" />

    <android.widget.Button
        android:id="@+id/btn_reset_pw_email_check"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="27dp"
        android:backgroundTint="#298ecc"
        android:text="확인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btn_reset_pw_auth_code_check"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="27dp"
        android:backgroundTint="#999999"
        android:text="확인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>