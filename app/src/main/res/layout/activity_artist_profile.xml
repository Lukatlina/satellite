<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artist_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ArtistProfileActivity">

    <ImageView
        android:id="@+id/iv_artist_profile_close_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_close_40" />

    <ImageView
        android:id="@+id/iv_artist_profile_more_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_more_horiz_40" />

    <ImageView
        android:id="@+id/iv_artist_profile_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="145dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="146dp"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tv_artist_profile_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_person_150" />

    <TextView
        android:id="@+id/tv_artist_profile_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="142dp"
        android:text="user_nick_name"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_artist_profile_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_artist_profile_profile" />

    <TextView
        android:id="@+id/tv_artist_profile_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="23dp"
        android:text="user_message"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_artist_profile_nickname" />

    <android.widget.Button
        android:id="@+id/artist_profile_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="180dp"
        android:text="아티스트 추가"
        android:textSize="18sp"
        android:background="#333333"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_artist_profile_message" />


</androidx.constraintlayout.widget.ConstraintLayout>