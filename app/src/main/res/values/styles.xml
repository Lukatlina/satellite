<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/custom_button_background</item> <!-- 버튼의 배경 설정 -->
        <item name="android:textColor">@android:color/white</item> <!-- 버튼의 텍스트 색상 -->
    </style>

    <style name="CustomReturnButtonStyle">
        <item name="android:background">@drawable/custom_return_button_background</item> <!-- 버튼의 배경 설정 -->
        <item name="android:textColor">@android:color/white</item> <!-- 버튼의 텍스트 색상 -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/customBoxStrokeColor</item>
        <item name="hintTextColor">@color/customHintTextColor</item>
        <item name="boxBackgroundColor">@color/customBoxBackgroundColor</item>
    </style>

    <style name="navigation_btn">
        <item name="android:background">@drawable/navigation_button_background</item> <!-- 버튼의 배경 설정 -->
        <item name="android:textColor">@android:color/black</item> <!-- 버튼의 텍스트 색상 -->
    </style>

    <style name="chat_btn">
        <item name="android:background">@android:color/transparent</item> <!-- 버튼의 배경 설정 -->
        <item name="android:textColor">@android:color/black</item> <!-- 버튼의 텍스트 색상 -->
    </style>

    <style name="withdrawalButtonStyle">
        <item name="android:background">@drawable/withdrawal</item> <!-- 버튼의 배경 설정 -->
        <item name="android:textColor">@android:color/white</item> <!-- 버튼의 텍스트 색상 -->
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HelperTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
    </style>
</resources>